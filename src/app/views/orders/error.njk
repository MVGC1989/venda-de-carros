{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}
    {% call cards.render("", "order-error container") %}
    <div class="error-lottie"> </div>

    <h2>Desculpe</h2>
    <p>
        Não foi possível processar o seu pedido.
    </p>
    <a href="/">Tente Novamente</a>
    
    {% endcall%}

    <script src="/lottie.min.js"></script>
    
    <script>
        const element = document.querySelector('.error-lottie')

        lottie.loadAnimation({
        container: element, // the dom element that will contain the animation
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/13865-sign-for-error-flat-style.json' // the path to the animation json
})
    </script>
{% endblock %}