{% extends "layout.njk" %}

{% import "parts/section-products.njk" as section%}

{% block content %}

<section class="search-products ">

<aside>
    <div class="header">
        <h2>{{search.term}}</h2>
        <p>
                        {% if search.total == 0 %}
                            <p>Sem Produtos</p>
                        {% elseif search.total == 1 %}
                            <p>{{search.total}} Encontrado</p>
                        {%else%}
                            <p>{{search.total}} Encontrados</p>
                        {% endif %} 
                    </p>
        </div>

    <nav class="categories">
        <h4>Categorias</h4>
        <ul>
            {% for category in categories %}
                <li><a href="/products/search?filter={{search.term}}&category={{category.id}}">{{category.name}}</a></li>
            {% endfor %}
        </ul>
    </nav>
</aside>
    {{section.products('', 'searched contain', products)}}
</section>

{% endblock content%}