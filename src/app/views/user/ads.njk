{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}
    {% call cards.render("Meus An√∫ncios", "users-ads container") %}
    <div class="items">
        {% for product in products %}
            <div class="item">
                <img class="image" src="{{product.img}}" alt="">
                <div class="info">
                    <div class="title">{{product.name}}</div>
                    <div class="price">{{product.formattedPrice}}</div>
                    <div class="published">Publicado em {{product.published.day}} </div>

                    <div class="actions">
                        <a href="/products/{{product.id}}">Visualizar</a>
                        <a href="/products/{{product.id}}/edit">Editar</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% endcall%}
{% endblock %}